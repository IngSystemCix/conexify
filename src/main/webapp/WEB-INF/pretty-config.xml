<pretty-config xmlns="http://ocpsoft.org/schema/rewrite-config-prettyfaces"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="http://ocpsoft.org/schema/rewrite-config-prettyfaces
                                   http://ocpsoft.org/xml/ns/prettyfaces/rewrite-config-prettyfaces.xsd">
  <url-mapping id="login">
    <pattern value="/login" />
    <view-id value="/public/index.xhtml" />
  </url-mapping>

  <url-mapping id="home_user">
    <pattern value="/u/home" />
    <view-id value="/private/user/home.xhtml" />
  </url-mapping>

  <url-mapping id="notification">
    <pattern value="/notification" />
    <view-id value="/private/notification.xhtml" />
  </url-mapping>

  <url-mapping id="request_people">
    <pattern value="/u/request-friend" />
    <view-id value="/private/user/request-people.xhtml" />
  </url-mapping>

  <url-mapping id="register">
    <pattern value="/register" />
    <view-id value="/public/register.xhtml" />
  </url-mapping>

  <url-mapping id="reset_password">
    <pattern value="/reset-password" />
    <view-id value="/public/reset-password.xhtml" />
  </url-mapping>

  <url-mapping id="profile-user">
    <pattern value="/profile" />
    <view-id value="/private/profile.xhtml" />
  </url-mapping>

  <url-mapping id="chat">
    <pattern value="/chat" />
    <view-id value="/private/chat.xhtml" />
  </url-mapping>

  <url-mapping id="settings_user">
    <pattern value="/u/settings" />
    <view-id value="/private/user/settings.xhtml" />
  </url-mapping>

  <url-mapping id="help_user">
    <pattern value="/u/help" />
    <view-id value="/private/user/help.xhtml" />
  </url-mapping>

  <url-mapping id="dashboard">
    <pattern value="/a/dashboard" />
    <view-id value="/private/admin/dashboard.xhtml" />
  </url-mapping>

  <url-mapping id="error401">
    <pattern value="/error-401" />
    <view-id value="/public/error/error401.xhtml" />
  </url-mapping>

  <url-mapping id="error403">
    <pattern value="/error-403" />
    <view-id value="/public/error/error403.xhtml" />
  </url-mapping>

  <url-mapping id="error404">
    <pattern value="/error-404" />
    <view-id value="/public/error/error404.xhtml" />
  </url-mapping>

  <url-mapping id="error500">
    <pattern value="/error-500" />
    <view-id value="/public/error/error500.xhtml" />
  </url-mapping>
</pretty-config>
